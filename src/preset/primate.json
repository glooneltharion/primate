{
  "base": "/",
  "debug": false,
  "files": {
    "index": "index.html"
  },
  "http": {
    "host": "localhost",
    "port": 9999,
    "ssl": {
      "key": "ssl/default.key",
      "cert": "ssl/default.crt"
    },
    "csp": {
      "default-src": "'self'",
      "object-src": "'none'",
      "frame-ancestors": "'none'",
      "form-action": "'self'",
      "base-uri": "'self'"
    },
    "same-site": "Strict"
  },
  "paths": {
    "public": "public",
    "static": "static",
    "routes": "routes",
    "components": "components"
  }
}
